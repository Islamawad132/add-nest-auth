  async findById(id: string): Promise<any> {
    return await this.prisma.user.findUnique({
      where: { id },
    });
  }

  /**
   * Find all users
   */
  async findAll(): Promise<any[]> {
    return await this.prisma.user.findMany({
      select: {
        id: true,
        email: true,
{{#if features.useUsername}}
