{{#if features.swagger}}
import { ApiProperty } from '@nestjs/swagger';

{{/if}}
export class AuthResponseDto {
{{#if features.swagger}}
  @ApiProperty({ example: 'eyJhbGciOiJIUzI1NiIs...', description: 'JWT access token' })
{{/if}}
  accessToken: string;
{{#if features.refreshTokens}}

{{#if features.swagger}}
  @ApiProperty({ example: 'eyJhbGciOiJIUzI1NiIs...', description: 'JWT refresh token' })
{{/if}}
  refreshToken: string;
{{/if}}

{{#if features.emailVerification}}

{{#if features.swagger}}
  @ApiProperty({ example: 'a1b2c3d4...', description: 'Email verification token (only on registration)', required: false })
{{/if}}
  verificationToken?: string;
{{/if}}

{{#if features.swagger}}
  @ApiProperty({
    example: { id: 'uuid', email: 'user@example.com'{{#if features.useUsername}}, username: 'john_doe'{{/if}}{{#if rbac.enabled}}, roles: ['User']{{/if}} },
    description: 'User information',
  })
{{/if}}
  user: {
    id: string;
    email: string;
{{#if features.useUsername}}
    username: string;
{{/if}}
{{#if rbac.enabled}}
    roles: string[];
{{/if}}
  };
}
