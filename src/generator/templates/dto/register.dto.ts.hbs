import { IsEmail, IsNotEmpty, IsString, MinLength, MaxLength{{#if config.enableRbac}}, IsArray, IsOptional{{/if}} } from 'class-validator';

export class RegisterDto {
  @IsEmail()
  @IsNotEmpty()
  email: string;

  @IsString()
  @IsNotEmpty()
  @MinLength(8)
  @MaxLength(32)
  password: string;
{{#if config.enableRbac}}

  @IsArray()
  @IsOptional()
  roles?: string[];
{{/if}}
}
