import { IsEmail, IsNotEmpty } from 'class-validator';
{{#if features.swagger}}
import { ApiProperty } from '@nestjs/swagger';
{{/if}}

export class ForgotPasswordDto {
{{#if features.swagger}}
  @ApiProperty({ example: 'user@example.com', description: 'Email address' })
{{/if}}
  @IsEmail()
  @IsNotEmpty()
  email: string;
}
