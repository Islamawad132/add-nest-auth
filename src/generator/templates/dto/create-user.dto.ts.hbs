import { IsEmail, IsNotEmpty, IsString, IsOptional{{#if rbac.enabled}}, IsArray{{/if}} } from 'class-validator';
{{#if features.swagger}}
import { ApiProperty } from '@nestjs/swagger';
{{/if}}

export class CreateUserDto {
{{#if features.swagger}}
  @ApiProperty({ example: 'user@example.com', description: 'User email address' })
{{/if}}
  @IsEmail()
  @IsNotEmpty()
  email: string;

{{#if features.useUsername}}
{{#if features.swagger}}
  @ApiProperty({ example: 'john_doe', description: 'Username', required: false })
{{/if}}
  @IsString()
  @IsOptional()
  username?: string;

{{/if}}
{{#if features.swagger}}
  @ApiProperty({ description: 'Hashed password' })
{{/if}}
  @IsString()
  @IsNotEmpty()
  password: string;

{{#if rbac.enabled}}
{{#if features.swagger}}
  @ApiProperty({ example: ['User'], description: 'User roles', required: false })
{{/if}}
  @IsArray()
  @IsOptional()
  roles?: string[];
{{/if}}
}
