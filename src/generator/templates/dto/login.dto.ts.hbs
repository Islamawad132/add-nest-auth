import { IsEmail, IsNotEmpty, IsString, MinLength } from 'class-validator';
{{#if features.swagger}}
import { ApiProperty } from '@nestjs/swagger';
{{/if}}

export class LoginDto {
{{#if features.swagger}}
  @ApiProperty({ example: 'user@example.com', description: 'User email address' })
{{/if}}
  @IsEmail()
  @IsNotEmpty()
  email: string;

{{#if features.swagger}}
  @ApiProperty({ example: 'StrongP@ss1', description: 'User password (min 6 characters)' })
{{/if}}
  @IsString()
  @IsNotEmpty()
  @MinLength(6)
  password: string;
}
